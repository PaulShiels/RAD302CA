@model IEnumerable<Trip_booking.Models.Leg>

<div>
    @if (@Model.Count()<1)
    {
        <p>There are no legs on this trip.</p>
    }
    else
    {
        <b><p>Trip Name: @Model.First().trip.name</p></b>
    }


</div>

<table class="table">
    <tr>
        <th>
            Start Location@*@Html.DisplayNameFor(model => model.startLocation)*@
        </th>
        <th>
            End Location @*@Html.DisplayNameFor(model => model.endLocation)*@
        </th>
        <th>
            Start Date @*@Html.DisplayNameFor(model => model.startDate)*@
        </th>
        <th>
            End Date @*@Html.DisplayNameFor(model => model.endDate)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.startLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.endLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.startDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.endDate)
        </td>
        <td>
            @Html.ActionLink("Add Guest", "AddGuest", new { id=item.LegId }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
